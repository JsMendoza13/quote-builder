<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#61000000">

    <LinearLayout
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_two"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/confirm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/sky_blue"
            android:text="Opciones de Usuario"
            android:textSize="@dimen/_20ssp"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:shadowColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/view_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/sky_blue"
            android:text="Ver Perfil"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/background_button"
            android:backgroundTint="#457193"/>
        <TextView
            android:id="@+id/view_quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/sky_blue"
            android:text="Ver cotizaciones"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/background_button"
            android:backgroundTint="#457193"/>
        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#BD0000"
            android:text="Cerrar sesiÃ³n"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/background_button"
            android:backgroundTint="#457193"/>


            <Button
                android:id="@+id/close_profile"
                android:layout_gravity="center"
                style="@style/button_style3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button_two"
                android:text="SALIR" />



    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#61000000">

    <LinearLayout
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_two"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/sky_blue"
            android:text="Nombre de usuario"
            android:textSize="@dimen/_20ssp"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:shadowColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/email_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/sky_blue"
            android:text="pepito@correo.com"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_2sdp"/>
    <LinearLayout
        android:id="@+id/ContainerOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lastname_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/holo_orange_light"
            android:text="Apellido:"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/answerLastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/sky_blue"
            android:layout_marginLeft="@dimen/_6sdp"
            android:text="pepito"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"

            />

    </LinearLayout>
        <LinearLayout
            android:id="@+id/ContainerTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/phone_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/holo_orange_light"
                android:text="Telefono:"
                android:textSize="@dimen/_17ssp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/answerPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/sky_blue"
                android:layout_marginLeft="@dimen/_6sdp"
                android:text="00000000"
                android:textSize="@dimen/_17ssp"
                android:textStyle="bold"

                />

        </LinearLayout>

        <Button
            android:id="@+id/BtnClose_user"
            android:layout_gravity="center"
            style="@style/button_style3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/background_button_two"
            android:text="Regresar" />



    </LinearLayout>

</RelativeLayout>
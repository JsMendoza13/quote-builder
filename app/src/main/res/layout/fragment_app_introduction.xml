<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b315e"
    android:padding="@dimen/_15sdp"
    tools:context=".app_introduction">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_65sdp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/continuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        style="@style/button_style2"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Introducción"
        android:shadowRadius="10"
        android:shadowColor="@color/black"
        android:textColor="@color/white"
        android:textSize="@dimen/_35ssp"
        android:layout_below="@id/logo"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La aplicación genera automáticamente el costo de todos los materiales implementados, lo que proporciona al usuario una herramienta práctica y eficiente para realizar cotizaciones de manera ágil y sencilla. De esta manera, se optimizan los recursos y el tiempo."
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp"
                android:padding="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/img_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_introduction"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
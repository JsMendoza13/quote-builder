<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_style">
        <item name="android:background">@drawable/background_button</item>
        <item name="backgroundTint">#9cc4e4</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:padding">@dimen/_7sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="button_style2">
        <item name="background">@drawable/background_button</item>
        <item name="backgroundTint">#9cc4e4</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="checkbox_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:buttonTint">#e8caaf</item>
    </style>
    <style name="edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:backgroundTint">#e8caaf</item>
    </style>
